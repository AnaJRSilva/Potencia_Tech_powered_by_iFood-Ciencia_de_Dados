# Variáveis: snake case, nomes sugestivos
age = 21
name = 'Ana'
print(f'Meu nome é {name} e eu tenho {age} anos de idade')

idade, nome = (21, 'Ana')
print(f'Meu nome é {nome} e eu tenho {idade} anos de idade')

age = 22
name = 'Júlia'
print(f'Meu nome é {name} e eu tenho {age} anos de idade')

idade, nome = (22, 'Júlia')
print(f'Meu nome é {nome} e eu tenho {idade} anos de idade')

# Constante
# Python não tem constantes como Java (final) e C (const)
# Convenção: declarar a variável toda em maiusculo

LISTA_NOMES_ALUNOS = ["Ana", "Bianca", "Caio", "Guilherme"]
print (LISTA_NOMES_ALUNOS)
